{
    "openapi": "3.0.0",
    "info": {
      "title": "Example API",
      "description": "An example API to demonstrate multiple context paths and a base path.",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "https://api.example.com",
        "description": "Main production server"
      }
    ],
    "paths": {
      "/api/v2/systemOne/tests": {
        "get": {
          "summary": "Get list of tests from systemOne",
          "description": "Retrieves a list of all available tests in systemOne.",
          "responses": {
            "200": {
              "description": "A list of tests.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "name": {
                          "type": "string",
                          "example": "Sample Test"
                        },
                        "status": {
                          "type": "string",
                          "example": "active"
                        }
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error"
            }
          }
        },
        "post": {
          "summary": "Create a new test in systemOne",
          "description": "Creates a new test entry in systemOne.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "New Test"
                    },
                    "description": {
                      "type": "string",
                      "example": "Description of the new test"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Test created successfully"
            },
            "400": {
              "description": "Invalid input"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/v2/anotherSystem/routes": {
        "get": {
          "summary": "Get routes from anotherSystem",
          "description": "Fetches all routes available in anotherSystem.",
          "responses": {
            "200": {
              "description": "A list of routes.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "routeId": {
                          "type": "string",
                          "example": "R001"
                        },
                        "routeName": {
                          "type": "string",
                          "example": "Main Route"
                        },
                        "isActive": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error"
            }
          }
        },
        "delete": {
          "summary": "Delete a route in anotherSystem",
          "description": "Deletes a specified route from anotherSystem.",
          "parameters": [
            {
              "name": "routeId",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "The ID of the route to delete."
            }
          ],
          "responses": {
            "200": {
              "description": "Route deleted successfully"
            },
            "404": {
              "description": "Route not found"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    }
  }
  